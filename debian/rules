#!/usr/bin/make -f
# Made with the aid of debmake, by Christoph Lameter,
# based on the sample debian/rules file for GNU hello by Ian Jackson.
# Modified my Nicola Ferralis <feranick@hotmail.com> for version 2.2CV.
package=cinelerra-cv

CONFFLAGS=""

ifneq ($(DEB_HOST_ARCH),powerpc)
	CONFFLAGS+=--enable-opengl
	CFLAGS=-ffast-math -minline-all-stringops -fprefetch-loop-arrays -funroll-loops -pipe
	CXXFLAGS=$(CFLAGS) -fno-check-new
endif

ifeq ($(DEB_HOST_ARCH),amd64)
	CFLAGS=-ffast-math -minline-all-stringops -fprefetch-loop-arrays -funroll-loops -pipe -fPIC
	CXXFLAGS=$(CFLAGS) -fno-check-new
endif

ifneq (, $(findstring smp2,$(DEB_BUILD_OPTIONS)))
	MAKEFLAGS=-j3
endif

# Enable this to activate hardening, when the source is fixed
CFLAGS += $(shell dpkg-buildflags --get CFLAGS)
CXXFLAGS += $(shell dpkg-buildflags --get CXXFLAGS)
LDFLAGS += $(shell dpkg-buildflags --get LDFLAGS)

build: build-stamp
build-stamp:
	dh_testdir
	@if [ ! -e configure ] ; then ./autogen.sh; fi
	CFLAGS="$(CFLAGS)" CXXFLAGS="$(CXXFLAGS)" LDFLAGS="$(LDFLAGS)" \
		./configure --enable-opengl --prefix=/usr $(CONFFLAGS)
	$(MAKE) $(MAKEFLAGS)
	docbook-to-man debian/cinelerra.sgml > debian/cinelerra.1
	docbook-to-man debian/mplexhi.sgml > debian/mplexhi.1
	docbook-to-man debian/mplexlo.sgml > debian/mplexlo.1
	touch build-stamp


clean:
	dh_testdir
	dh_testroot
	[ ! -f Makefile ] || $(MAKE) clean
	[ ! -f Makefile ] || $(MAKE) distclean
	dh_clean -a
	-rm -f debian/cinelerra.1
	-rm -f debian/mplexhi.1
	-rm -f debian/mplexlo.1
	-rm -f build-stamp

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp

	# .la files are not used in Debian, remove them
	find debian/tmp -name '*.la'|xargs rm

	chmod -x debian/tmp/usr/lib/cinelerra/*
	chmod +x debian/tmp/usr/lib/cinelerra/fonts
	chmod -x debian/tmp/usr/lib/cinelerra/fonts/*
	chmod +x debian/tmp/usr/lib/cinelerra/shapewipe
	-ln -s /usr/bin/mpeg2enc debian/tmp/usr/lib/cinelerra/mpeg2enc.plugin

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_install
	dh_installdocs -XCVS
	dh_installchangelogs -a
	dh_installman
	dh_installmenu -n
	dh_link -a
	dh_icons -a
	dh_strip -a
	strip -x -s -R .comment -R .note debian/$(package)/usr/lib/cinelerra/*.so
	dh_compress -a
	dh_fixperms -a
	dh_makeshlibs -a
	dh_shlibdeps -a -v
	dh_installdeb -a
	dh_gencontrol 
	dh_builddeb -a

binary: binary-indep binary-arch

get-upstream-source:
	git clone git://git.cinelerra-cv.org/CinelerraCV.git cinelerra-cv
	date=$$(date +%Y%m%d); \
	  packagever=cinelerra-cv-2.2; \
	  tag=$$(cd cinelerra-cv; git rev-list master -n 1 | cut -c 1-7); \
	  (cd cinelerra-cv; git archive HEAD --prefix=$$packagever/) | bzip2 > ../cinelerra-cv_2.2.git.$${date}.$${tag}.orig.tar.bz2
	rm -rf cinelerra-cv
